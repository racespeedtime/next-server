{
  "name": "server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "serve": "omp-server",
    "dev": "npm-run-all -p -r -l dev:server dev:watch",
    "dev:watch": "cross-env NODE_ENV=development rollup -c -w",
    "dev:server": "nodemon -x omp-server -w dist/bundle.js -d 2",
    "build": "npm run clean && cross-env NODE_ENV=production rollup -c",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@infernus/core": "^0.10.0-beta.7",
    "axios": "^1.6.7",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@sa-mp/node": "^0.2.0",
    "@types/node": "^20.11.5",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.11",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.5",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-node-externals": "^6.1.2",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "typescript": "^5.3.3"
  }
}
